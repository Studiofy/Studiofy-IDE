<WinUI_X:SplashScreen
    x:Class="WindowsCode.Studio.SplashScreen"
    xmlns:WinUI_X="using:WinUIEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsCode.Studio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="500" Height="300">
    
    <Grid x:Name="ContentProvider"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Image Source="Assets/StoreLogo.scale-400.png"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Width="150" Height="150"
               Margin="95,30,95,50"/>
        <TextBlock Text="Studiofy IDE"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"
                   Margin="140,-80,0,0"/>
        <TextBlock x:Name="VersionText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="90,-25,0,0"/>
        <TextBlock x:Name="ProgressText"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   HorizontalTextAlignment="Left"
                   TextWrapping="Wrap"
                   Margin="256,0,0,120"/>
        <TextBlock x:Name="TipText"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   HorizontalTextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,30,0,50"/>
        <ProgressBar x:Name="LoadingBar"
                     IsIndeterminate="True"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Center"
                     Width="500"/>
    </Grid>
    
</WinUI_X:SplashScreen>
