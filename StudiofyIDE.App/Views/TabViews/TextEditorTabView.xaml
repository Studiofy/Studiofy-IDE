    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsCode.Studio.Views.TabViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Studiofy="using:Studiofy.TextEditor" mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Studiofy:TextEditor x:Name="TextEditor">
        <Studiofy:TextEditor.ContextFlyout>
            <MenuFlyout x:Name="TextEditorContextMenu"/>
        </Studiofy:TextEditor.ContextFlyout>
    </Studiofy:TextEditor>
</Page>
