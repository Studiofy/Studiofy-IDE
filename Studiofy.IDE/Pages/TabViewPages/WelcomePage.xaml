       BorderBrush="Gray"                            BorderThickness="0.5"                            CornerRadius="4"                            Margin="15,0,0,15">                    <TextBlock Text="Get Started"                               FontSize="18"                               FontWeight="SemiBold"                               Margin="15"/>                    <Button x:Name="NewFileButton"                            Content="Create New File"                            HorizontalAlignment="Stretch"                            Height="50" Margin="15,0,15,15"                            Click="NewFileButton_Click"/>                    <Button x:Name="OpenFileButton"                            Content="Open Existing File"                            HorizontalAlignment="Stretch"                            Height="50" Margin="15,0,15,15"                            Click="OpenFileButton_Click"/>                    <Button x:Name="OpenFolderButton"                            Content="Open Existing Folder"                            HorizontalAlignment="Stretch"                            Height="50" Margin="15,0,15,15"                            Click="OpenFolderButton_Click"/>                    <Button x:Name="CloneRepositoryButton"                            Content="Clone Repository via GitHub"                            HorizontalAlignment="Stretch"                            Height="50" Margin="15,0,15,15"                            Click="CloneRepositoryButton_Click"/>                    <Border BorderBrush="Gray"                            BorderThickness="0,1,0,0"                            Margin="15,0,15,15"/>                    <Button Content="Clear Recent Files"                            HorizontalAlignment="Stretch"                            Height="50" Margin="15,0,15,15"/>                </StackPanel>                <StackPanel Grid.Column="2"                            Orientation="Vertical"                            BorderBrush="Gray"                            BorderThickness="0.5"                            CornerRadius="4"                            Margin="15,0,0,15">                    <TextBlock Text="Recent Files"                               FontSize="18"                               FontWeight="SemiBold"                               Margin="15"/>                    <TextBlock x:Name="ItemNotifier"                               Text="No Recent Files Used"                               Foreground="Gray"                               Margin="15,15,15,0"                               TextAlignment="Center"                               HorizontalAlignment="Stretch"/>                    <ListBox x:Name="RecentItemList"                               Margin="15,0,15,15"                               HorizontalAlignment="Stretch"/>                </StackPanel>                <StackPanel Grid.Column="4"                            Grid.Row="0"                            Orientation="Vertical"                            BorderBrush="Gray"                            BorderThickness="0.5"                            CornerRadius="4"                            Margin="15,0,15,15">                    <TextBlock Text="Learn More about Studiofy IDE"                               TextWrapping="WrapWholeWords"                               FontSize="18"                               FontWeight="SemiBold"                               Margin="15"/>                    <HyperlinkButton Content="Getting Started with Studiofy IDE"                                     HorizontalContentAlignment="Left"                                     HorizontalAlignment="Stretch"                                     Height="50" Margin="15,0,15,15"/>                    <HyperlinkButton Content="Explaining Channels (Canary, Beta, Official)"                                     HorizontalContentAlignment="Left"                                     HorizontalAlignment="Stretch"                                     Height="50" Margin="15,0,15,15"/>                    <HyperlinkButton Content="Frequently Asked Questions"                                     HorizontalContentAlignment="Left"                                     HorizontalAlignment="Stretch"                                     Height="50" Margin="15,0,15,15"/>                    <HyperlinkButton Content="Studiofy IDE's GitHub Repository"                                     HorizontalContentAlignment="Left"                                     HorizontalAlignment="Stretch"                                     Height="50" Margin="15,0,15,15"/>                    <HyperlinkButton Content="Send Feedback to Developer"                                     HorizontalContentAlignment="Left"                                     HorizontalAlignment="Stretch"                                     Height="50" Margin="15,0,15,15"/>                </StackPanel>                <Grid Grid.Column="0"                      Grid.ColumnSpan="5"                      Grid.Row="1">                    <CheckBox x:Name="ShowWelcomePageCheckBox"                              Margin="0,0,0,10"                              VerticalAlignment="Bottom"                              HorizontalAlignment="Center"                              Content="Show Welcome Page on Startup"/>                </Grid>            </Grid>        </Grid>    </ScrollViewer></Page>